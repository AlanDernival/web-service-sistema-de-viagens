<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <joined-subclass dynamic-insert="false" dynamic-update="false" mutable="true" name="br.com.bean.Classes_Mapeamentos.Representante" extends="br.com.bean.Classes_Mapeamentos.Pessoa" table="Representante" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
  
       <key column="pessoaId" />
       
       <property name="ctps" type="string" not-null="true">
           <column name="CTPS"></column>
       </property>
       
       <property name="dataDeAdmissao" type="date" not-null="true">
           <column name="DataDeAdmissao"></column>
       </property>
       
       <property name="salario" type="float" not-null="true">
           <column name="Salario"></column>
       </property>
       
       
           
  </joined-subclass>
</hibernate-mapping>