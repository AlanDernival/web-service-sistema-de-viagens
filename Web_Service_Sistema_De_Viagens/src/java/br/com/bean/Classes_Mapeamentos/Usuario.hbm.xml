<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <joined-subclass dynamic-insert="false" dynamic-update="false" mutable="true" name="br.com.bean.Classes_Mapeamentos.Usuario" extends="br.com.bean.Classes_Mapeamentos.Pessoa" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
  
      <key column="pessoaId"/>
      
      <property name="nomeDeUsuario" type="string" not-null="true">
          <column name="NomeDeUsuario" length="100"/>
      </property>
      
      <property name="senha" type="string" not-null="true"> 
          <column name="Senha" length="1000"/>
      </property>
      
      <property name="nivelPermissao" type="integer">
          <column name="NivelPermissao"/>
      </property>
  
  </joined-subclass>
</hibernate-mapping>